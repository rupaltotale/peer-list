
<div class="d-flex flex-row justify-content-between align-items-center">
    
        {{#if this.isEditting}}
            {{input type="text" class="form-control w-50 " value=newName}}
        {{else}}
        <div class="mr-3">
            {{@person.name}}
        </div>
        {{/if}}
    <div>
        {{#if this.isEditting}}
            <button 
                type="button" 
                class="btn btn-success" 
                onclick={{fn this.updatePerson @person}}
                disabled={{if @person.name false true}}
                >
                <FaIcon @icon="check" />
            </button>
            <button 
                type="button" 
                class="btn btn-secondary" 
                onclick={{this.toggleEditting}}
                >
                <FaIcon @icon="times-circle" />
            </button>
        {{else}}
            <button 
                type="button" 
                class="btn btn-primary" 
                onclick={{this.toggleEditting}}>
                <FaIcon @icon="edit" />
            </button>
        {{/if}}
        <button 
            type="button" 
            class="btn btn-danger" 
            onclick={{fn this.deletePerson @person}}>
            <FaIcon @icon="trash" />
        </button>
    </div>
</div>